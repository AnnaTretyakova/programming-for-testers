package com.example.tests;

import org.openqa.selenium.By;
import org.testng.annotations.Test;

public class ContactRemovalTests extends TestBase{
	
	@Test
	public void deleteSomeContacts(){
		int index = 1;
		app.getNavigationHelper().openMainPage();
		if (By.xpath("//tr[" + (index + 1) + "]//a/img[@title = 'Edit']")!= null) //Test fails with "NoSuchElementException" when there is no Groups, how to make it passed?
		{
			app.getContactHelper().deleteContact(index);
			app.getContactHelper().returnHomePage();
		}
		System.out.println("There is no Contact to delete");
	}
}
